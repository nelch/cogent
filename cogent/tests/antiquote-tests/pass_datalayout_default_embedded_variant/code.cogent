type Simple = {
	a: <A U8 | B U16>,
	b: <A U8 | B U16 | C U32 | D U64 | E Bool>
}

putVals: Simple take (a, b) -> Simple
putVals simple = simple { a = A 0x12, b = C 0x7890abcd }

getVals: Simple -> (Simple take (a, b), #Simple)
getVals simple {a=a', b=b'} =
	let simple' = #{a=a', b=b'} ! simple
	in (simple, simple')